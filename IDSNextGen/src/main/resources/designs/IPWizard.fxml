<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.agnisys.idsnextgen.controllers.IPWizardController">
    <stylesheets>
        <URL value="@/styles/ipwizard.css" />
    </stylesheets>
    <top>
      <Pane prefHeight="48.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblWizardTitle" layoutX="14.0" layoutY="14.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </top>
    <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <children>
            <Label fx:id="lblFileType" layoutX="17.0" layoutY="44.0" />
            <Pane layoutX="106.0" layoutY="10.0" prefHeight="221.0" prefWidth="480.0" style="-fx-background-color: #FAFAFA;">
               <children>
                  <RadioButton fx:id="rbWord" layoutX="18.0" layoutY="18.0" mnemonicParsing="false" selected="true">
                     <toggleGroup>
                        <ToggleGroup fx:id="btn1" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rbExcel" disable="true" layoutX="18.0" layoutY="50.0" mnemonicParsing="false" toggleGroup="$btn1" />
                  <RadioButton fx:id="rbIPXact" disable="true" layoutX="18.0" layoutY="82.0" mnemonicParsing="false" toggleGroup="$btn1" />
                  <RadioButton fx:id="rbSystemRDL" disable="true" layoutX="18.0" layoutY="114.0" mnemonicParsing="false" toggleGroup="$btn1" />
                  <RadioButton fx:id="rbCustomCSV" disable="true" layoutX="18.0" layoutY="146.0" mnemonicParsing="false" toggleGroup="$btn1" />
                  <RadioButton fx:id="rbRalf" disable="true" layoutX="18.0" layoutY="178.0" mnemonicParsing="false" toggleGroup="$btn1" />
               </children>
            </Pane>
            <Label fx:id="lblFileLocation" layoutX="14.0" layoutY="290.0" />
            <TextField fx:id="txtLocation" layoutX="106.0" layoutY="286.0" prefHeight="25.0" prefWidth="418.0" />
            <Button fx:id="btnBrowse" layoutX="532.0" layoutY="286.0" mnemonicParsing="false" onAction="#browseProjLoc" />
            <Label fx:id="lblFileName" layoutX="14.0" layoutY="254.0" />
            <TextField fx:id="txtFileName" layoutX="106.0" layoutY="250.0" prefHeight="25.0" prefWidth="481.0" />
         </children>
      </Pane>
   </center>
   <bottom>
      <Pane prefHeight="44.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnCreateFile" layoutX="471.0" layoutY="10.0" mnemonicParsing="false" onAction="#click_createFile" />
            <Button fx:id="btnCancel" layoutX="533.0" layoutY="10.0" mnemonicParsing="false" onAction="#closeButtonAction" />
         </children>
      </Pane>
   </bottom>
</BorderPane>
